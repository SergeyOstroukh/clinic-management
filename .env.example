# Database Configuration
# ля локальной разработки с Docker используйте:
DATABASE_URL=postgresql://clinic_user:clinic_password@localhost:5432/clinic_db

# ля продакшена (Railway/другой хостинг) используйте реальный URL:
# DATABASE_URL=postgresql://user:password@host:port/database

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Initial Admin User (опционально, по умолчанию admin/admin)
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=admin
